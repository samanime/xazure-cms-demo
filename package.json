{
  "name": "xazure-cms-demo",
  "version": "0.1.0",
  "description": "A basic demo of Xazure CMS.",
  "main": "index.js",
  "scripts": {
    "postpublish": "git push & git push --tags",
    "start": "npm run clean & npm run build & xazure-cms",
    "clean": "rimraf -rf dist || exit 0",
    "start:watch": "nodemon --exec \"npm run build & xazure-cms\"",
    "build": "babel config.js config.private.js -d dist",
    "build:watch": "npm run build -- -w",
    "kill": "kill-port 8000 || exit 0"
  },
  "nodemonConfig": {
    "ignoreRoot": [
      ".git"
    ],
    "watch": [
      "config.js",
      "node_modules/xazure-event-manager/dist",
      "node_modules/xazure-logger/dist",
      "node_modules/xazure-logger-module-console/dist",
      "node_modules/xazure-cms/dist",
      "node_modules/xazure-cms-module-auth/dist",
      "node_modules/xazure-cms-module-admin/dist",
      "node_modules/xazure-cms-module-posts/dist",
      "node_modules/xazure-cms-module-theme-default/dist",
      "node_modules/xazure-cms-utils/dist"
    ]
  },
  "author": "Christian Snodgrass <christian.snodgrass.open@gmail.com> (http://xazure.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samanime/xazure-cms-demo.git"
  },
  "bugs": {
    "url": "https://github.com/samanime/xazure-cms-demo/issues"
  },
  "dependencies": {
    "merge": "^1.2.0",
    "xazure-cms": "^0.1.0",
    "xazure-cms-module-admin": "^0.1.0",
    "xazure-cms-module-auth": "^0.1.0",
    "xazure-cms-module-posts": "^0.1.0",
    "xazure-cms-module-theme-default": "^0.1.0",
    "xazure-logger-module-console": "^0.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-import-rename": "^1.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cpx": "^1.5.0",
    "cross-port-killer": "^1.0.1",
    "nodemon": "^1.14.6",
    "rimraf": "^2.6.2"
  }
}
